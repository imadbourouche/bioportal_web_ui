.search-result-component{class: sub_component_class}
    %a.title{href: @link}
        = @title
    - if @uri
        .uri
            = @uri
    - if @text
        .text
            = @text
    .actions
        .button 
            = inline_svg_tag "icons/details.svg"
            .text
                Details
        .button 
            = inline_svg_tag "icons/visualize.svg"
            .text
                Visualize
        - unless  @sub_number == 0
            .button.icon-right
                .text
                    = "#{@sub_number} more from this ontology"
                = inline_svg_tag "icons/arrow-down.svg"
        - unless @mappings == 0
            .button.icon-right
                .text
                    = "#{@mappings} mapped ontologies"
                = inline_svg_tag "icons/arrow-down.svg"
    - if subresults?
        .more-from-ontology
            .vertical-line
            .search-result-sub-components
                - subresults.each do |result|
                    .search-result-sub-component
                        - #result.update(is_sub_component: true)
                        = result
    