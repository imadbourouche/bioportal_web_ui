<%@title = "Login"%>

<%= form_for(:user, :url => {:controller => 'login',:action=>'create'}) do |f| %>
<%unless @errors.nil?%>
<div style="color:red;">
Errors On Form
<ul>

<%for error in @errors%>
<li><%=error%></li>
<%end%>

</ul>
</div>
<%end%>

    <div class="login-page-container">
        <div class="login-form">
            <p class="login-input-title">Username or Email</p>
            <%= text_field 'user', 'username', class: "login-input email-input", placeholder: "Enter your password" %>
            <p class="login-input-title">Password</p>
            <%= password_field 'user','password', :autocomplete => "off", class: "login-input password-input", placeholder: "Enter your password"  %>      
            <a class="login-forgot-password" href="/lost_pass"><p>Forgot password?</p></a>
            <input class="login-button" name="commit" data-disable-with="Login" type="submit" value="Login">
            <p class="dont-have-account">Don't have an account? <a class="login-register-button" href="<%= new_user_path %>">Register</a></p>
        </div>
    </div>


<% end %>
