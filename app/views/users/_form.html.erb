<div class="register-page-container">
        <div class="register-form">
            <div class="register-title-bar">
                <a href="javascript:javascript:history.go(-1)">
                    <svg class="register-arrowback" width="15" height="12" viewBox="0 0 15 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M5.64176 1L1 6L5.64176 11M14 6H1.13" stroke="black" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </a>
                    
                <div class="register-title-container">
                    <h2 class="register-title">
                        Create new account
                    </h2>
                    <hr id="register-title-line">
                </div>
                <div></div>
            </div>

            <div class="register-double-input">
                <div class="register-first-input">
                    <p class="register-input-title">First name <font color="red">*</font></p> 
                    <%= text_field :user, :firstName, value: @user.firstname, class: "register-input-short"%> 
                </div>
                <div>
                    <p class="register-input-title">Last name <font color="red">*</font></p> 
                    <%= text_field :user, :lastName, value: @user.lastname, class: "register-input-short"%>
                </div>
            </div>



            <p class="register-input-title">Username <font color="red">*</font></p> 
            <%= text_field :user, :username, value: @user.username, class: "register-input-long"%>

            <div class="register-double-input">
                <div class="register-first-input">
                    <p class="register-input-title">ORCIDE ID <font class="register-optional">(optional)</font></p> 
