- @title = t('register.title')
= form_for(:user, :url => users_path) do |f|
  - unless @errors.nil?
    .enable-lists{:style => "color: red; padding: 1em;"}
      = t('register.account_errors')
      %ul
        - for error in @errors
          %li= error.is_a?(Array) ? error.last : error
  = render :partial => 'form', :locals => {:f => f}
