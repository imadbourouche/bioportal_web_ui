= turbo_frame_tag 'groups-list' do
  %div.d-flex
    = link_to_modal("Create New group",
                      new_admin_group_path,
                      id: "new_group_btn",
                      class: "btn btn-default mb-3",
                      data: { show_modal_title_value: "Create a new group"})

    = action_button("Synchronize groups with slices", admin_groups_synchronize_groups_url)

  %div.my-1
    = render_alerts_container
  = render TableComponent.new(id: 'admin_groups', custom_class: 'border rounded p-1') do |t|
    - t.header do |h|
      - h.th {'Name'}
      - h.th {'Description'}
      - h.th {'Created'}
      - h.th {'ID'}
      - h.th {'COUNT'}
      - h.th {'Actions'}

    = render partial: 'admin/groups/group', collection: @groups
    %tr.empty-state
      %td.text-center{:colspan => "6"} There are currently no  agents.
  :javascript
    $.fn.dataTable.ext.errMode = 'none';
    $("#admin_groups").dataTable()

